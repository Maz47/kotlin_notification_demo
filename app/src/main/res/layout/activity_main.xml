<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_simple_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Simple Notification"/>

    <Button
        android:id="@+id/button_extended_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Extended Notification"/>

    <Button
        android:id="@+id/button_intent_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Intent Notification"/>

    <Button
        android:id="@+id/button_actions_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Actions Notification"/>

</LinearLayout>